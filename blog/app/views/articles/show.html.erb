<section class = "border-4 border border-primary">
  <h1 class = "p-3 mb-2 bg-white text-black d-flex justify-content-center"><%= @article.title %></h1>

  <p class = "p-3 mb-2 bg-white text-black d-flex justify-content-center"><%= @article.body %></p>

  <ul>
    <li class = "p-3 mb-2 bg-white text-black d-flex justify-content-center"><%= link_to "Edit", edit_article_path(@article) %></li>
    <li class = "p-3 mb-2 bg-white text-black d-flex justify-content-center"><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
    } %></li>
  </ul>
</section>